<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_category"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/_16sdp"
        android:paddingTop="@dimen/_24sdp"
        android:paddingBottom="@dimen/_10sdp">

        <ImageView
            android:id="@+id/iv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_category_name_uz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_18sdp"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/iv_category"
            app:layout_constraintTop_toBottomOf="@id/iv_category"
            tools:text="Name Uz" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_category_name_ru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_6sdp"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_category_name_uz"
            app:layout_constraintTop_toBottomOf="@id/tv_category_name_uz"
            tools:text="Name Ru" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_category_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_6sdp"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_category_name_uz"
            app:layout_constraintTop_toBottomOf="@id/tv_category_name_en"
            tools:text="Name Ru" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_category_name_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_6sdp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="@id/tv_category_name_ru"
            app:layout_constraintTop_toBottomOf="@id/tv_category_name_ru"
            tools:text="Name En" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>